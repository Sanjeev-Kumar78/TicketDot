# Generic text handling
* text=auto
.gitattributes text

# Enforce LF for source files and scripts (useful for CI and Unix tooling)
*.sh     text eol=lf
*.bash   text eol=lf
*.zsh    text eol=lf
Dockerfile text eol=lf
Makefile text eol=lf

# Windows batch files should keep CRLF
*.bat    text eol=crlf

# Common text formats
*.md     text
*.txt    text
*.yaml   text
*.yml    text
*.json   text
*.toml   text
*.xml    text
*.csv    text

# Smart contract / DApp languages
*.sol    text eol=lf linguist-language=Solidity
*.erl    text eol=lf
*.go     text eol=lf
*.rs     text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.js     text eol=lf
*.jsx    text eol=lf

# Treat common binary files as binary
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.zip    binary
*.tar    binary
*.gz     binary
*.exe    binary
*.dll    binary
*.so     binary
*.dylib  binary
*.pdf    binary
*.jar    binary

# Export-ignore for archives (don't include local/build artifacts or secrets)
node_modules/      export-ignore
dist/              export-ignore
build/             export-ignore
coverage/          export-ignore
*.log              export-ignore
.env               export-ignore
.env.*             export-ignore
*.local            export-ignore

# Avoid merge conflicts on lockfiles by favoring a union-style merge
# (adjust if you prefer a different strategy)
package-lock.json  merge=union
yarn.lock          merge=union
pnpm-lock.yaml     merge=union

# Mark large media for Git LFS if using it (uncomment to enable LFS patterns)
#*.png filter=lfs diff=lfs merge=lfs -text
#*.jpg filter=lfs diff=lfs merge=lfs -text

# Ensure executable bit is preserved for scripts (Git tracks executable mode)
# (No explicit attribute needed here; keep for clarity)
*.sh    eol=lf

# End of .gitattributes